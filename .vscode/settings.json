// alnoki's development environment preferences - enjoy!

// Settings are specified if they defer from defaults
// See default workspace settings for more info
{
    // General viewing
    "workbench.colorTheme": "Default Dark+",
    "editor.tokenColorCustomizations": {
        "comments": "#3CB371",
        "strings": "#FF00FF"
    },
    "editor.minimap.enabled": false,
    "zenMode.centerLayout": false,
    "editor.mouseWheelZoom": true,
    "breadcrumbs.enabled": true,


    // Whitespace
    "editor.renderWhitespace": "all",
    "files.trimTrailingWhitespace": true,


    // Line width
    // Per PEP8, for comments (71) and code (79)
    "[python]": {
        "editor.rulers": [71, 79],
        "editor.tabSize": 4,
    },
    "[markdown]": {
        "editor.rulers": [79],
        "editor.tabSize": 3,
    },
    // If not .py or .md, assume .rst file
    "editor.rulers": [79],
    "editor.tabSize": 3,


    // Linting
    "python.linting.pylintEnabled": false,
    "python.linting.pep8Enabled": true,
    // Disable errors about literal carriage returns
    "restructuredtext.linter.extraArgs": [
        "--ignore D002",
        "--ignore D004"
    ],


    // Testing, see VS Code unit test documentation
    "python.unitTest.unittestEnabled": false,
    "python.unitTest.pyTestEnabled": true,
    "python.unitTest.nosetestsEnabled": false,


    // Privacy related
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "gitlens.advanced.telemetry.enabled": false,


    // Version control
    "git.autofetch": true,
}