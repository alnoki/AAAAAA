// alnoki's development environment preferences - enjoy!

// Settings are specified if they defer from defaults
// See default workspace settings for more info
{
    // General viewing
    "workbench.colorTheme": "Default Dark+",
    "editor.tokenColorCustomizations": {
        "comments": "#3CB371",
        "strings": "#FF00FF"
    },
    "editor.minimap.enabled": false,
    "zenMode.centerLayout": false,
    "editor.mouseWheelZoom": true,
    "breadcrumbs.enabled": true,
    "workbench.activityBar.visible": false,
    "workbench.statusBar.visible": false,
    "workbench.editor.showTabs": false,
    "workbench.editor.highlightModifiedTabs": true,


    // Whitespace
    "editor.renderWhitespace": "all",
    "files.trimTrailingWhitespace": true,
    "editor.detectIndentation": false,


    // Line/tab width
    // Command palette >
    //   Change language mode >
    //     Configure 'x' language based settings
    "[python]": { // Per PEP8, for comments (71) and code (79)
        "editor.rulers": [71, 79],
        "editor.tabSize": 4,
    },
    "[restructuredtext]": {
        "editor.rulers": [79],
        "editor.tabSize": 3,
    },
    "[markdown]": {
        "editor.rulers": [79],
        "editor.tabSize": 3,
    },
    "[jsonc]":{
        "editor.tabSize": 4,
    },
    "[json]":{
        "editor.tabSize": 4,
    },


    // Linting
    "python.linting.pylintEnabled": false,
    "python.linting.pep8Enabled": true,
    // ``:`` errors incurred from mypy annotations
    "python.linting.pep8Args": ["--ignore=E701"],
    // Disable errors about literal carriage returns
    "restructuredtext.linter.extraArgs": [
        "--ignore D002",
        "--ignore D004"
    ],
    "restructuredtext.confPath": "${workspaceFolder}\\doc",


    // Testing, see VS Code unit test documentation
    "python.unitTest.unittestEnabled": false,
    "python.unitTest.pyTestEnabled": true,
    "python.unitTest.nosetestsEnabled": false,


    // Privacy related
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "gitlens.advanced.telemetry.enabled": false,


    // Version control
    "git.autofetch": true,

}